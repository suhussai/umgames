var categories = new Array("", "category1", "category2", "category3", "category4", "category5");

var displayed = 0;  

document.getElementById("category1").onclick = function(){
    if (displayed == 0) {
        document.getElementById("gameSelectionBox").style.visibility = "visible";
        displayed = 1;
    }
    
    else {
        document.getElementById("gameSelectionBox").style.visibility = "hidden";
        displayed = 0;
    }
};
